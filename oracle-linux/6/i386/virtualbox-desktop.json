{
	"builders": [
		{
			"boot_command": [
				"<esc>",
				"<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/desktop-ks.cfg",
				"<enter><wait>"
			],
			"boot_wait": "15s",
			"disk_size": 40960,
			"guest_os_type": "RedHat",
			"headless":  false,
			"http_directory": "../common/http_directory",
			"iso_url": "http://iso.linuxquestions.org/download/908/8656/http/ftp5.gwdg.de/OracleLinux-R6-U6-Server-i386-dvd.iso",
			"iso_checksum": "81f0c85217f40763dea5053ec5594e4958498bbc",
			"iso_checksum_type": "sha1",
			"ssh_password": "vagrant",
			"ssh_username": "root",
			"ssh_wait_timeout": "120m",
			"type": "virtualbox-iso",
			"shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "1024"]
			],
			"vm_name": "oraclelinux-desktop-6-i386"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "./scripts/epel.sh"
		},
		{
			"type": "shell",
			"script": "../../common/scripts/vbox-base.sh"
		},
		{
			"type": "shell",
			"script": "../../common/scripts/vbox-guest-additions.sh"
		},
		{
			"type": "shell",
			"script": "../../common/scripts/puppet.sh"
		},
    {
			"type": "shell",
			"script": "../../common/scripts/chef.sh"
		},
    {
      "type": "shell",
      "script": "../../common/scripts/vagrant.sh"
    },
		{
			"type": "shell",
			"script": "../../common/scripts/cleanup.sh"
		}
	],
	"post-processors": [
        {
            "type": "vagrant",
            "output": "oraclelinux-desktop-6-i386.box"
        }
    ]
}
