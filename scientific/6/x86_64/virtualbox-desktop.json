{
	"builders": [
		{
			"boot_command": [
				"<esc>",
				"<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/desktop-ks.cfg",
				"<enter><wait>"
			],
			"boot_wait": "15s",
			"disk_size": 40960,
			"guest_os_type": "RedHat_64",
			"headless":  false,
			"http_directory": "public/scientific/6/common/http_directory",
			"iso_url": "http://mirror.lstn.net/scientific/6x/x86_64/iso/SL-65-x86_64-2014-01-27-Install-DVD.iso",
			"iso_checksum": "8edc9b64f0622646c5d5e599bcf437175c83abcb15a374d73dc820379e1a443e",
			"iso_checksum_type": "sha256",
			"ssh_password": "vagrant",
			"ssh_username": "root",
			"ssh_wait_timeout": "120m",
			"type": "virtualbox-iso",
			"shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "1024"]
			],
			"vm_name": "scientific-desktop-6-x86-64"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "public/scientific/6/x86_64/scripts/epel.sh"
		},
		{
			"type": "shell",
			"script": "public/scientific/6/common/scripts/vbox-base.sh"
		},
		{
			"type": "shell",
			"script": "public/scientific/6/common/scripts/vbox-guest-additions.sh"
		},
    {
      "type": "shell",
      "script": "public/scientific/6/common/scripts/vagrant.sh"
    },
		{
			"type": "shell",
			"script": "public/scientific/6/common/scripts/cleanup.sh"
		}
	],
	"post-processors": [
        {
            "type": "vagrant",
            "output": "scientific-desktop-6-x86-64.box"
        }
    ]
}
