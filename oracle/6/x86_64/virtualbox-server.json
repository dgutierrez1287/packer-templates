{
	"builders": [
		{
			"boot_command": [
				"<esc>",
				"<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/server-ks.cfg",
				"<enter><wait>"
			],
			"boot_wait": "15s",
			"disk_size": 40960,
			"guest_os_type": "RedHat_64",
			"headless":  false,
			"http_directory": "public/oracle/6/common/http_directory",
			"iso_url": "http://iso.linuxquestions.org/download/908/8657/http/ftp5.gwdg.de/OracleLinux-R6-U6-Server-x86_64-dvd.iso",
			"iso_checksum": "5738f10a506d3630edfd297ef179b553091c6a48",
			"iso_checksum_type": "sha1",
			"ssh_password": "vagrant",
			"ssh_username": "vagrant",
			"ssh_pty": true,
			"ssh_wait_timeout": "120m",
			"type": "virtualbox-iso",
			"shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "512"]
			],
			"vm_name": "oraclelinux-server-6-x86-64"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "public/oracle/6/x86_64/scripts/epel.sh",
			"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "public/oracle/6/common/scripts/vbox-base.sh",
			"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "public/oracle/6/common/scripts/vbox-guest-additions.sh",
			"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
    {
      "type": "shell",
      "script": "public/oracle/6/common/scripts/vagrant.sh",
			"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
    },
		{
			"type": "shell",
			"script": "public/oracle/6/common/scripts/cleanup.sh",
			"execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		}
	],
	"post-processors": [
        {
            "type": "vagrant",
            "output": "oraclelinux-server-6-x86-64.box"
        }
    ]
}
