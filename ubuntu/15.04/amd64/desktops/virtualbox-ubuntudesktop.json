{
	"builders": [
		{
			"boot_command": [
				"<esc><esc><enter><wait>",
        "/install/vmlinuz preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/desktop-preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=us keyboard-configuration/variant=us console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
			],
			"boot_wait": "15s",
			"disk_size": 40960,
			"guest_os_type": "Ubuntu_64",
			"headless":  false,
			"http_directory": "../../common/http_directory",
			"iso_url": "http://mirror.pnl.gov/releases/15.04/ubuntu-15.04-server-amd64.iso",
			"iso_checksum": "487f4a81f22f8597503db3d51a1b502e",
			"iso_checksum_type": "md5",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
			"ssh_password": "vagrant",
			"ssh_username": "vagrant",
			"ssh_wait_timeout": "120m",
			"type": "virtualbox-iso",
			"shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--vram", "128"],
        ["modifyvm", "{{.Name}}", "--ioapic", "on"],
        ["modifyvm", "{{.Name}}", "--accelerate3d", "on"],
        ["modifyvm", "{{.Name}}", "--clipboard", "bidirectional"]
			],
			"vm_name": "ubuntu-desktop-1504-amd64"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "../../common/scripts/extrasrepo.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../../common/scripts/base.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../../common/scripts/vagrant.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../../common/scripts/ubuntu-desktop.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../../common/scripts/vbox-guest-additions.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../../common/scripts/chef.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
    {
      "type": "shell",
      "script": "../../common/scripts/puppet.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
    },
		{
			"type": "shell",
			"script": "../../../common/scripts/cleanup.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		}
	],
	"post-processors": [
        {
            "type": "vagrant",
            "output": "ubuntu-desktop-1504-amd64.box"
        }
    ]
}
