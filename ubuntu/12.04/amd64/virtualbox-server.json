{
	"builders": [
		{
			"boot_command": [
				"<esc><esc><enter><wait>",
        "/install/vmlinuz preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/server-preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=us keyboard-configuration/variant=us console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
			],
			"boot_wait": "15s",
			"disk_size": 40960,
			"guest_os_type": "Ubuntu_64",
			"headless":  false,
			"http_directory": "../common/http_directory",
			"iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.4-server-amd64.iso",
			"iso_checksum": "e83adb9af4ec0a039e6a5c6e145a34de",
			"iso_checksum_type": "md5",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
			"ssh_password": "vagrant",
			"ssh_username": "vagrant",
			"ssh_wait_timeout": "120m",
			"type": "virtualbox-iso",
			"shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
			"vboxmanage": [
				["modifyvm", "{{.Name}}", "--memory", "512"]
			],
			"vm_name": "ubuntu-server-1204-amd64"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"script": "../../common/scripts/base.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../common/scripts/vagrant.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
		{
			"type": "shell",
			"script": "../../common/scripts/vbox-guest-additions.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		},
    {
      "type": "shell",
      "script": "../common/scripts/puppet.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
    },
		{
			"type": "shell",
			"script": "../../common/scripts/cleanup.sh",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'"
		}
	],
	"post-processors": [
        {
            "type": "vagrant",
            "output": "ubuntu-server-1204-amd64.box"
        }
    ]
}
